{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "Non-major Starlight dependencies",
      "groupSlug": "starlight-non-major",
      "automergeType": "branch",
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "dependencyDashboardApproval": true
    },
    {
      "matchPackageNames": [
        "@astrojs/starlight",
        "astro"
      ],
      "groupName": "Starlight and Astro core dependencies",
      "groupSlug": "starlight-core",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ],
  "labels": [
    "dependencies"
  ]
}
